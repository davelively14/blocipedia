%h2= @wiki.title
.container
  .row
    .col-md-8
      = markdown(@wiki.body)
    .col-md-4
      %h4
        Owner: #{@wiki.user.username}
      = link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-primary'
      - if policy(@wiki).destroy?
        = link_to "Delete", wiki_path(@wiki), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this wiki?"}
      - if @collaborators.count > 0
        %br/
        %br/
        %h4 Collaborators
        %ul
          - @collaborators.each do |user|
            %li= user.username
  %br/
  .row
    = link_to "Back to Wikis", wikis_path
